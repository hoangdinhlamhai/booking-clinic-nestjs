# Copy file này thành .env và thay đổi các giá trị theo cấu hình của bạn

# ======================
# Database (Prisma)
# ======================
DATABASE_URL=postgresql://user:password@host:port/database?schema=public

# ======================
# JWT Configuration
# ======================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=604800

# ======================
# Payment (Sepay)
# ======================
SEPAY_API_KEY=your_sepay_api_key

# ======================
# Google OAuth
# ======================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ======================
# Application
# ======================
NODE_ENV=development
PORT=3000

# ===========================================
# MEA (Medical Examination Assistant)
# ===========================================

# Groq API Key - For Whisper STT and LLM (GPT-OSS models)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Google AI API Key - For text embeddings (RAG)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ===========================================
# Ollama (Optional - Local LLM)
# ===========================================
# Set to 'true' to use local Ollama instead of Groq
USE_OLLAMA=false

# Ollama server URL (default: http://localhost:11434)
OLLAMA_URL=http://localhost:11434

# Ollama model name (default: llama3:8b)
OLLAMA_MODEL=llama3:8b
